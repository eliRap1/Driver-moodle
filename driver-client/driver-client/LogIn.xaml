<Page x:Class="driver_client.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Subtle background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <!-- Login Panel -->
        <Border CornerRadius="10"
                Background="#1A2636"
                Padding="40"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#00C0CC"
                BorderThickness="1"
                Panel.ZIndex="1">
            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Log In"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           Foreground="LightGray"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <Border BorderBrush="#00C0CC"
                        BorderThickness="1"
                        CornerRadius="3"
                        Background="#223344"
                        Margin="0,0,0,10">
                    <TextBox x:Name="username"
                             Height="30"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="6"
                             FocusVisualStyle="{x:Null}"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="LightGray"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <Border BorderBrush="#00C0CC"
                        BorderThickness="1"
                        CornerRadius="3"
                        Background="#223344"
                        Margin="0,0,0,20">
                    <PasswordBox x:Name="pass"
                                 Height="30"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="6"
                                 FocusVisualStyle="{x:Null}"/>
                </Border>

                <!-- Log In Button -->
                <Button x:Name="signIn"
                        Content="Log In"
                        Height="36"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#00E0FF"
                        Foreground="Black"
                        BorderBrush="#00C0CC"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="signIn_Click"
                        Margin="0,0,0,20"/>

                <!-- Sign Up Link -->
                <TextBlock HorizontalAlignment="Center"
                           Foreground="LightGray"
                           FontSize="12">
                    Don't have an account? 
                    <Hyperlink Click="signUp_Click" Foreground="#00E0FF">Sign Up</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Hidden Frame -->
        <Frame x:Name="page"
               Panel.ZIndex="2" Margin="-19,-21,-22,-21"/>
    </Grid>
</Page>
