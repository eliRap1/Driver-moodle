<Page x:Class="driver_client.WriteRewiew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WriteRewiew"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>
        <Button Content="← Back"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="0,10,0,0"
        Width="80"
        Background="#00E0FF"
        Foreground="Black"
        FontWeight="Bold"
        BorderBrush="#00C0CC"
        Cursor="Hand"
        Click="BackButton_Click"/>
        
        <!-- Main Review Card -->
        <Border CornerRadius="12"
                Background="#1B2A40"
                Padding="30"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Write a Review"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Rating stars -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <Button Content="★" Tag="1" FontSize="24" Background="Transparent"
                            Foreground="Gray" BorderThickness="0"
                            Click="Star_Click"/>
                    <Button Content="★" Tag="2" FontSize="24" Background="Transparent"
                            Foreground="Gray" BorderThickness="0"
                            Click="Star_Click"/>
                    <Button Content="★" Tag="3" FontSize="24" Background="Transparent"
                            Foreground="Gray" BorderThickness="0"
                            Click="Star_Click"/>
                    <Button Content="★" Tag="4" FontSize="24" Background="Transparent"
                            Foreground="Gray" BorderThickness="0"
                            Click="Star_Click"/>
                    <Button Content="★" Tag="5" FontSize="24" Background="Transparent"
                            Foreground="Gray" BorderThickness="0"
                            Click="Star_Click"/>
                </StackPanel>

                <!-- Review text box -->
                <TextBox x:Name="reviewText"
                         Height="100"
                         FontSize="14"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Background="#142435"
                         Foreground="White"
                         BorderBrush="#00E0FF"
                         BorderThickness="1"
                         Padding="8"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,20"
                         Text="Write your review here..."/>

                <!-- Submit button -->
                <Button Content="Submit Review"
                        Height="40"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#00E0FF"
                        Foreground="Black"
                        BorderBrush="#00C0CC"
                        Cursor="Hand"
                        Click="SubmitReview_Click"/>
            </StackPanel>
        </Border>
        <Frame x:Name="page" Margin="-19,-21,-21,-19" Panel.ZIndex="100"/>

    </Grid>
</Page>
