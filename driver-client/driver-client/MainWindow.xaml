<Window x:Class="driver_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driver_client"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4FF">

    <Grid>

        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.3"
               Grid.RowSpan="5"
               Grid.ColumnSpan="3"/>


        <Border x:Name="welcomePanel"
                CornerRadius="12"
                Background="White"
                Opacity="0.9"
                Padding="30"
                Width="500" Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Opacity="0.25"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Welcome to DRIVER MOODLE"
                           FontSize="32" FontWeight="Bold" Foreground="#2A239A"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="logIn"
                            Content="Log In" Width="120" Height="40" FontSize="16" FontWeight="SemiBold"
                            Background="#2A239A" Foreground="White" 
                            Click="signIn_Click"/>
                    <Button x:Name="signUp"
                            Content="Sign Up" Width="120" Height="40" FontSize="16" FontWeight="SemiBold"
                            Background="Transparent" BorderBrush="#2A239A" BorderThickness="2"
                            Foreground="#2A239A" 
                            Click="signUp_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Frame x:Name="page"
               Grid.RowSpan="100"
               Grid.ColumnSpan="100"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="0,0,0,0"
               />
    </Grid>
</Window>