<Window x:Class="driver_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driver_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/picture/background.png" Height="600" Margin="0,-95,0,-71" Grid.ColumnSpan="100" Grid.RowSpan="100"/>
        <TextBlock Grid.Row="0" Text="Welcome to DRIVER MOODLE" Height="60" Width="600" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <PasswordBox x:Name="pass" Width="200" Height="40" Grid.Row="1"/>
        <TextBox x:Name="username" Width="200" Height="40" Grid.Row="2"/>
    </Grid>
</Window>
