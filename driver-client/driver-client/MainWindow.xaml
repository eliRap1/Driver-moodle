<Window x:Class="driver_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:driver_client"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#0E1A2B">

    <Grid Margin="0">
        <!-- Faint background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.05"
               Panel.ZIndex="0"/>

        <!-- Welcome Panel -->
        <Border x:Name="welcomePanel"
                CornerRadius="12"
                Background="#1A2636"
                Padding="30"
                Width="500" Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="1"
                BorderBrush="#00C0CC"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="12"
                                  ShadowDepth="4"
                                  Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Welcome to DRIVER MOODLE"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button x:Name="logIn"
                            Content="Log In"
                            Width="120" Height="40"
                            FontSize="16" FontWeight="SemiBold"
                            Background="#00E0FF"
                            Foreground="Black"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="signIn_Click"/>

                    <Button x:Name="signUp"
                            Content="Sign Up"
                            Width="120" Height="40"
                            FontSize="16" FontWeight="SemiBold"
                            Background="Transparent"
                            Foreground="#00E0FF"
                            BorderBrush="#00E0FF"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="signUp_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top-left Menu -->
        <DockPanel HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10"
                   Panel.ZIndex="2">
            <Menu Background="#1A2636"
                  Foreground="Black"
                  FontWeight="Bold"
                  Height="24"
                  BorderBrush="#00C0CC"
                  BorderThickness="1">
                <MenuItem Header="_Menu">
                    <MenuItem Header="Log In"
                              x:Name="loginB"
                              Click="signIn_Click"
                              Icon="/picture/driver.png"/>
                    <MenuItem Header="Sign Up"
                              x:Name="signUpB"
                              Click="signUp_Click"
                              Icon="/picture/student.png"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <!-- Content Frame -->
        <Frame x:Name="page"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="0"
               Panel.ZIndex="3"/>
    </Grid>
</Window>
