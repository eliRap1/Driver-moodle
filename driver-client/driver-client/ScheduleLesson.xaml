<Page x:Class="driver_client.ScheduleLesson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScheduleLesson"
      Background="#0E1A2B">

    <Grid>
        <!-- Faint background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.05"
               Panel.ZIndex="0"/>
        <Button Content="← Back"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="0,10,0,0"
        Width="80"
        Background="#00E0FF"
        Foreground="Black"
        FontWeight="Bold"
        BorderBrush="#00C0CC"
        Cursor="Hand"
        Click="BackButton_Click"/>
        <!-- Main Panel -->
        <Border Background="#1A2636"
                CornerRadius="10"
                Padding="30"
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#00C0CC"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="12"
                                  ShadowDepth="4"
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Schedule a Lesson"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Date Picker -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Select Date:"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <DatePicker x:Name="lessonDatePicker"
                                SelectedDate="{x:Null}"
                                Background="#E8F0FE"
                                BorderBrush="#00C0CC"
                                BorderThickness="1"
                                Padding="6"/>
                </StackPanel>

                <!-- Time Picker -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Select Time:"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="lessonTimeComboBox"
                              Background="#E8F0FE"
                              BorderBrush="#00C0CC"
                              BorderThickness="1"
                              Padding="6"
                              FontSize="14">
                    </ComboBox>
                </StackPanel>

                <!-- Submit Button -->
                <Button Content="Confirm Lesson"
                        Width="160"
                        Height="40"
                        Background="#00E0FF"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderBrush="#00C0CC"
                        BorderThickness="1"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        Click="ConfirmLesson_Click"/>
            </StackPanel>
        </Border>
        <Frame x:Name="page"  Panel.ZIndex="100"/>

    </Grid>
</Page>
