<Page x:Class="driver_client.ViewLessons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d"
      Title="ViewLessons"
      Background="#0E1A2B"
      d:DesignHeight="450" d:DesignWidth="800">

    <Page.Resources>
        <local:ImgConventer x:Key="ImgConventer"/>
    </Page.Resources>

    <Grid Background="#F5F5F5" Margin="-4,3,-6,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="455*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="📘 Your Driving Lessons"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0" Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Upcoming Lessons -->
            <Border Grid.Column="0" Padding="10" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="Upcoming Lessons"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               DockPanel.Dock="Top"/>
                    <DataGrid x:Name="UpcomingLessonsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              RowBackground="#E3F2FD"
                              AlternatingRowBackground="#BBDEFB"
                              FontSize="14"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              ColumnHeaderHeight="30">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding LessonId}" Width="50"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="80"/>
                            <DataGridTemplateColumn Header="Paid" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Width="16" Height="16"
                                               Source="{Binding Paid, Converter={StaticResource ImgConventer}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Action" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Mark as Paid"
                                                Padding="4,2"
                                                Margin="4,0"
                                                Click="MarkPaid_Click"
                                                Visibility="{Binding Paid, Converter={StaticResource ImgConventer}, ConverterParameter=Visibility}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Completed Lessons -->
            <Border Grid.Column="1" Padding="10" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="Completed Lessons"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               DockPanel.Dock="Top"/>
                    <DataGrid x:Name="CompletedLessonsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              RowBackground="#F1F8E9"
                              AlternatingRowBackground="#DCEDC8"
                              FontSize="14"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              ColumnHeaderHeight="30">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding LessonId}" Width="50"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="80"/>
                            <DataGridTemplateColumn Header="Paid" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Width="16" Height="16"
                                               Source="{Binding Paid, Converter={StaticResource ImgConventer}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Action" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Mark as Paid"
                                                Padding="4,2"
                                                Margin="4,0"
                                                Click="MarkPaid_Click"
                                                Visibility="{Binding Paid, Converter={StaticResource ImgConventer}, ConverterParameter=Visibility}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Back Button -->
        <Button Content="Back"
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Padding="10,5"
                Margin="0,20,0,0"
                Width="80"
                Height="30"
                Background="#00E0FF"
                Foreground="Black"
                FontSize="16"
                FontWeight="SemiBold"
                BorderBrush="#00C0CC"
                BorderThickness="1"
                Cursor="Hand"
                Click="BackButton_Click"/>

        <Frame x:Name="page" Panel.ZIndex="100"   Grid.RowSpan="3" Margin="0,-6,0,0"/>
    </Grid>
</Page>
