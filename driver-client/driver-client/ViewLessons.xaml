<Page x:Class="driver_client.ViewLessons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewLessons"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <StackPanel Panel.ZIndex="1">
            <!-- Title -->
            <TextBlock Text="My Lessons"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Upcoming Lessons -->
            <TextBlock Text="Upcoming Lessons"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,10"/>
            <DataGrid x:Name="UpcomingLessonsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowBackground="#1B2A40"
                      AlternatingRowBackground="#22354D"
                      GridLinesVisibility="Horizontal"
                      Foreground="White"
                      BorderBrush="#00E0FF"
                      HorizontalAlignment="Stretch"
                      Margin="0,0,0,20"
                      Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*"/>
                    <DataGridTextColumn Header="Paid" Binding="{Binding IsPaid}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Completed Lessons -->
            <TextBlock Text="Completed Lessons"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,10,0,10"/>
            <DataGrid x:Name="CompletedLessonsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowBackground="#1B2A40"
                      AlternatingRowBackground="#22354D"
                      GridLinesVisibility="Horizontal"
                      Foreground="White"
                      BorderBrush="#00E0FF"
                      HorizontalAlignment="Stretch"
                      Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*"/>
                    <DataGridTextColumn Header="Paid" Binding="{Binding IsPaid}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
