<Page x:Class="driver_client.TeacherUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherUI" Background="Aqua">

    <Grid Background="#ECEFF1" Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/picture/background1.png"
               Stretch="UniformToFill"
               Opacity="0.4"
               Grid.RowSpan="2" Margin="-40,-40,-42,-39"/>
        <!-- Header with greeting -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0 0 0 20">
            <TextBlock Text="Hello, " FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <TextBlock x:Name="teacherName" Text="Teacher Name" FontSize="24" FontWeight="Bold" Foreground="#2196F3" Margin="5,0,0,0"/>
        </DockPanel>

        <!-- Main button area -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Students" Width="220" Height="50" FontSize="18" Margin="0,0,0,15"
                    Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"
                    Click="Students_Click"/>

            <Button Content="Calendar" Width="220" Height="50" FontSize="18" Margin="0,0,0,15"
                    Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"
                    Click="Calendar_Click"/>

            <Button Content="Test Schedule" Width="220" Height="50" FontSize="18" 
                    Background="#2196F3" Foreground="White" BorderThickness="0" Cursor="Hand"
                    Click="TestSchedule_Click"/>
        </StackPanel>
        <Frame x:Name="page" Margin="-40,-43,-40,-43" Panel.ZIndex="100" Grid.RowSpan="2"/>

    </Grid>
</Page>
