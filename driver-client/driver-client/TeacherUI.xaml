<Page x:Class="driver_client.TeacherUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherUI"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background1.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">

            <StackPanel Panel.ZIndex="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="320">

                <!-- Header -->
                <TextBlock Text="Welcome,"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock x:Name="teacherName"
                           Text="Teacher Name"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E0FF"/>
                    <Border x:Name="AdminBadge" 
                            Background="#E74C3C" 
                            CornerRadius="3" 
                            Padding="6,2" 
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                        <TextBlock Text="ADMIN" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Admin Dashboard Button (Only for admin) -->
                <Button x:Name="AdminDashboardBtn"
                    Content="🛡️ Admin Dashboard"
                    Margin="0,0,0,20"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#E74C3C"
                    Foreground="White"
                    BorderBrush="#C0392B"
                    Cursor="Hand"
                    Visibility="Collapsed"
                    Click="AdminDashboard_Click"/>

                <!-- Navigation Buttons -->
                <Button Content="Students"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Students_Click"/>

                <Button Content="Lessons Schedule"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Schedule_Click"/>

                <Button Content="Calendar"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Calendar_Click"/>

                <Button Content="💰 Payment Reports"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="PaymentReports_Click"/>

                <Button Content="Chat"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Chat_Click"/>

                <Button Content="🎫 Support Tickets"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="SupportTickets_Click"/>

                <!-- NEW: Settings Button -->
                <Button Content="⚙️ Settings"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#9B59B6"
                    Foreground="White"
                    BorderBrush="#8E44AD"
                    Cursor="Hand"
                    Click="Settings_Click"/>

                <Button Content="🚪 Logout"
                    Margin="0,30,0,10"
                    Width="280" Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="Transparent"
                    Foreground="#E74C3C"
                    BorderBrush="#E74C3C"
                    Cursor="Hand"
                    Click="Logout_Click"/>

            </StackPanel>
        </ScrollViewer>
        <!-- Navigation Frame -->
        <Frame x:Name="page" Panel.ZIndex="100" Margin="-19,-21,-21,-19"/>
    </Grid>
</Page>
