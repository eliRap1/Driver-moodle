<Page x:Class="driver_client.TeacherUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherUI"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background1.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">

            <StackPanel Panel.ZIndex="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="320">

            <!-- Header -->
            <TextBlock Text="Welcome,"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock x:Name="teacherName"
                       Text="Teacher Name"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Navigation Buttons -->
            <Button Content="Students"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Students_Click"/>
            
            <Button Content="Lessons Schedule"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Schedule_Click"/>

            <Button Content="Calendar"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="Calendar_Click"/>

            <Button Content="Test Schedule"
                    Margin="0,10"
                    Width="280" Height="50"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#00E0FF"
                    Foreground="Black"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="TestSchedule_Click"/>
            
            <Button Content="Chat"
                Margin="0,10"
                Width="280" Height="50"
                FontSize="18"
                FontWeight="SemiBold"
                Background="#00E0FF"
                Foreground="Black"
                BorderBrush="#00C0CC"
                Cursor="Hand"
                Click="Chat_Click"/>

        </StackPanel>
        </ScrollViewer>
        <!-- Navigation Frame -->
        <Frame x:Name="page" Panel.ZIndex="100" Margin="-19,-21,-21,-19"/>
    </Grid>
</Page>
