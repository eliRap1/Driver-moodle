<Page x:Class="driver_client.TeacherSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Teacher Settings"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       mc:Ignorable="d"
       d:DesignHeight="500" d:DesignWidth="900"
      Background="#0D1B2A">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1B2D47" Padding="20">
            <StackPanel>
                <TextBlock Text="⚙️ Settings" FontSize="28" FontWeight="Bold" 
                           Foreground="#00E0FF" HorizontalAlignment="Center"/>
                <TextBlock Text="Manage your pricing and payment options" 
                           FontSize="14" Foreground="LightGray" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel MaxWidth="500" HorizontalAlignment="Center">

                <!-- Lesson Price Section -->
                <Border Background="#1B2D47" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="💰 Lesson Pricing" FontSize="18" FontWeight="Bold" 
                                   Foreground="#00E0FF" Margin="0,0,0,15"/>

                        <TextBlock Text="Default Lesson Price (₪):" Foreground="LightGray" Margin="0,0,0,5"/>
                        <Border BorderBrush="#00C0CC" BorderThickness="1" CornerRadius="5" Background="#223344">
                            <TextBox x:Name="LessonPriceBox" Height="40" FontSize="16"
                                     Background="Transparent" Foreground="White" 
                                     BorderThickness="0" Padding="10,8"/>
                        </Border>

                        <TextBlock Text="This is your default price. You can set custom prices for students."
                                   FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Payment Methods Section -->
                <Border Background="#1B2D47" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="💳 Payment Methods" FontSize="18" FontWeight="Bold" 
                                   Foreground="#00E0FF" Margin="0,0,0,15"/>

                        <TextBlock Text="Select the payment methods you accept:" 
                                   Foreground="LightGray" Margin="0,0,0,10"/>

                        <CheckBox x:Name="chkCash" Content="💵 Cash" Foreground="White" 
                                  FontSize="14" Margin="0,5,0,5"/>
                        <CheckBox x:Name="chkCreditCard" Content="💳 Credit Card" Foreground="White" 
                                  FontSize="14" Margin="0,5,0,5"/>
                        <CheckBox x:Name="chkBankTransfer" Content="🏦 Bank Transfer" Foreground="White" 
                                  FontSize="14" Margin="0,5,0,5"/>
                        <CheckBox x:Name="chkBit" Content="📱 Bit" Foreground="White" 
                                  FontSize="14" Margin="0,5,0,5"/>
                        <CheckBox x:Name="chkPaybox" Content="📱 Paybox" Foreground="White" 
                                  FontSize="14" Margin="0,5,0,5"/>
                    </StackPanel>
                </Border>

                <!-- Student Custom Pricing -->
                <Border Background="#1B2D47" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="👥 Student Pricing" FontSize="18" FontWeight="Bold" 
                                   Foreground="#00E0FF" Margin="0,0,0,15"/>

                        <TextBlock Text="Set custom prices or discounts for specific students:"
                                   Foreground="LightGray" Margin="0,0,0,10"/>

                        <Button x:Name="ManageStudentPricesBtn" Content="Manage Student Prices"
                                Height="40" Background="#00C0CC" Foreground="Black"
                                FontWeight="Bold" Cursor="Hand"
                                Click="ManageStudentPrices_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#1B2D47" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← Back" Height="45" Margin="0,0,10,0"
                        Background="#334455" Foreground="White" FontWeight="Bold"
                        Click="Back_Click" Cursor="Hand"/>

                <Button Grid.Column="1" Content="💾 Save Settings" Height="45" Margin="10,0,0,0"
                        Background="#00E0FF" Foreground="Black" FontWeight="Bold"
                        Click="SaveSettings_Click" Cursor="Hand"/>
            </Grid>
        </Border>

        <Frame x:Name="page" Panel.ZIndex="100" Grid.RowSpan="3"/>
    </Grid>
</Page>
