<Page x:Class="driver_client.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chat"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- רקע שקוף -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0" />

        <!-- אזור הצ'אט -->
        <Grid Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- רשימת הודעות -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" x:Name="MessageList">
                <StackPanel x:Name="MessagesPanel"
                Margin="10"
                Orientation="Vertical"
                VerticalAlignment="Top"
                Background="Transparent"
                />
            </ScrollViewer>


            <!-- שליחת הודעה -->
            <DockPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBox x:Name="MessageTextBox"
                         MinHeight="40"
                         FontSize="14"
                         Padding="10"
                         Background="White"
                         Foreground="Black"
                         BorderThickness="1"
                         BorderBrush="#00E0FF"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Stretch"
                         Width="600"/>

                <Button Content="Send"
                        Click="Send_Click"
                        Background="#00E0FF"
                        Foreground="Black"
                        FontWeight="Bold"
                        FontSize="16"
                        Margin="10,0,0,0"
                        Width="100"
                        Height="40"
                        Cursor="Hand"/>
            </DockPanel>

        </Grid>
        <Button Content="← Back"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="0,10,0,0"
Width="80"
Background="#00E0FF"
Foreground="Black"
FontWeight="Bold"
BorderBrush="#00C0CC"
Cursor="Hand"
Click="BackButton_Click"
                Panel.ZIndex="99"/>
        <Frame x:Name="page"  Panel.ZIndex="100" Margin="-22,-22,-21,-21" Grid.RowSpan="3"/>

    </Grid>
</Page>
