<Page x:Class="driver_client.StudentPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="StudentPayment"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <Grid Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="💳 Payments"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Unpaid Lessons -->
                <Border Grid.Column="0" Background="#1B2D47" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <DockPanel>
                        <TextBlock Text="📋 Unpaid Lessons"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#00E0FF"
                                   DockPanel.Dock="Top"
                                   Margin="0,0,0,15"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="UnpaidLessonsPanel"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <!-- Payment Summary -->
                <Border Grid.Column="1" Background="#1B2D47" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="💰 Payment Summary"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#00E0FF"
                                   Margin="0,0,0,15"/>

                        <!-- Total Due -->
                        <Border Background="#142435" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Total Due"
                                           FontSize="14"
                                           Foreground="Gray"/>
                                <TextBlock x:Name="TotalDueText"
                                           Text="0 ₪"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#E74C3C"/>
                            </StackPanel>
                        </Border>

                        <!-- Selected for Payment -->
                        <Border Background="#142435" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Selected for Payment"
                                           FontSize="14"
                                           Foreground="Gray"/>
                                <TextBlock x:Name="SelectedAmountText"
                                           Text="0 ₪"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#2ECC71"/>
                                <TextBlock x:Name="SelectedCountText"
                                           Text="0 lessons selected"
                                           FontSize="12"
                                           Foreground="LightGray"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Payment Method -->
                        <TextBlock Text="Payment Method"
                                   FontSize="14"
                                   Foreground="LightGray"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="PaymentMethodCombo"
                                  Background="#142435"
                                  Foreground="Black"
                                  Margin="0,0,0,15"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Credit Card"/>
                            <ComboBoxItem Content="Bank Transfer"/>
                            <ComboBoxItem Content="Cash"/>
                            <ComboBoxItem Content="Bit"/>
                        </ComboBox>

                        <!-- Installments -->
                        <TextBlock Text="Number of Installments"
                                   FontSize="14"
                                   Foreground="LightGray"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="InstallmentsCombo"
                                  Background="#142435"
                                  Foreground="Black"
                                  Margin="0,0,0,20"
                                  SelectedIndex="0"
                                  SelectionChanged="Installments_Changed">
                            <ComboBoxItem Content="1 Payment"/>
                            <ComboBoxItem Content="2 Payments"/>
                            <ComboBoxItem Content="3 Payments"/>
                            <ComboBoxItem Content="4 Payments"/>
                        </ComboBox>

                        <!-- Installment Info -->
                        <TextBlock x:Name="InstallmentInfoText"
                                   Text=""
                                   FontSize="13"
                                   Foreground="#F39C12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   Visibility="Collapsed"/>

                        <!-- Pay Button -->
                        <Button Content="💳 Process Payment"
                                Height="50"
                                FontSize="18"
                                FontWeight="Bold"
                                Background="#2ECC71"
                                Foreground="White"
                                BorderBrush="#27AE60"
                                Cursor="Hand"
                                Click="ProcessPayment_Click"/>

                        <!-- Select All Button -->
                        <Button Content="Select All Unpaid"
                                Height="35"
                                Margin="0,10,0,0"
                                Background="Transparent"
                                Foreground="#00E0FF"
                                BorderBrush="#00E0FF"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="SelectAll_Click"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Payment History -->
            <Border Grid.Row="2" Background="#1B2D47" CornerRadius="10" Padding="15" Margin="0,15,0,0">
                <Expander Header="📜 Payment History" Foreground="#00E0FF" FontWeight="Bold">
                    <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PaymentHistoryPanel"/>
                    </ScrollViewer>
                </Expander>
            </Border>
        </Grid>

        <!-- Back Button -->
        <Button Content="← Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="80"
                Height="35"
                Background="#00E0FF"
                Foreground="Black"
                FontWeight="Bold"
                BorderBrush="#00C0CC"
                Cursor="Hand"
                Click="Back_Click"
                Panel.ZIndex="2"/>

        <Frame x:Name="page" Panel.ZIndex="100" Margin="-20,-20,-20,-20"/>
    </Grid>
</Page>
