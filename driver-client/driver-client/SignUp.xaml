<Page x:Class="driver_client.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SignUp">

    <Grid>
        <Image Source="/picture/background.png" Margin="0,-95,0,-71" Grid.ColumnSpan="100" Grid.RowSpan="100" />
        <Rectangle Fill="AliceBlue" Height="200" Width="400" Margin="0,-50,0,0"/>
        <Label Content="Sign Up" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,20,0,0" x:Name="signUp_label"/>
        <ComboBox x:Name="role" Margin="80" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" SelectionChanged="role_SelectionChanged" >
        </ComboBox>
                 
        <Button Content="Sign Up" Margin="5" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="signup_Click"/>
        <StackPanel  Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="112" Margin="-220,-50,0,0">
            <TextBlock Text="User name:" FontSize="23" FontWeight="Bold"/>
            <TextBlock Text="Password:" FontSize="23" FontWeight="Bold"/>
            <TextBlock Text="Age:" FontSize="23" FontWeight="Bold"/>
            <TextBlock Text="Email:" FontSize="23" FontWeight="Bold"/>
            <TextBlock Text="Phone:" FontSize="23" FontWeight="Bold"/>
            <TextBlock Text="Teacher id: " FontSize="23" FontWeight="Bold" x:Name="idTecherText" Visibility="Hidden"/>
        </StackPanel>
        <StackPanel  Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="140,-60,0,0" Width="200">
            <Border x:Name="username_border"  BorderBrush="Red" BorderThickness="0">
                <TextBox Name="username" Height="30" Width="200" FontSize="20">
                    <Binding  Path="Username"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:MinLenth/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>

            </Border>
            <Border x:Name="pass_border"  BorderBrush="Red" BorderThickness="0"> 
                <TextBox Name="pass" Height="30" Width="200" FontSize="20 ">
                    <Binding  Path="Password"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">

                        <Binding.ValidationRules>
                            <local:MinLenth/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </Border>
            <Border x:Name="age_border"  BorderBrush="Red" BorderThickness="0">
                <TextBox Name="age" Height="30" Width="200" FontSize="20" >
                    <Binding  Path="Age"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">

                        <Binding.ValidationRules>
                            <local:AgeRangeRule/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </Border>
            <Border x:Name="email_border"  BorderBrush="Red" BorderThickness="0">
                <TextBox Name="email" Height="30" Width="200" FontSize="20"  >
                    <Binding  Path="Email"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">

                        <Binding.ValidationRules>
                            <local:EmailRule/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </Border>
            <Border x:Name="phone_border"  BorderBrush="Red" BorderThickness="0">
                <TextBox Name="phone" Height="30" Width="200" FontSize="20"  >
                    <Binding  Path="Phone"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:PhoneRule/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </Border>
            <Border x:Name="teacher_border" BorderBrush="Red" BorderThickness="0">
                <TextBox Name="teacherId" Height="30" Width="200" FontSize="20" Visibility="Hidden">
                    <Binding Path="TeacherId"  ValidatesOnDataErrors="True"  UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:TeacherIdRule/>
                            <!--validation Rule with parameters-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </Border>
        </StackPanel>


    </Grid>
</Page>
