<Page x:Class="driver_client.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="800"
      Title="SignUp"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Subtle background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <!-- Sign Up Panel -->
        <ScrollViewer Grid.Row="0" Grid.Column="0" Panel.ZIndex="1">
            <StackPanel x:Name="SignUpPanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="380"
                        Margin="0,20">

                <!-- Back Button -->
                <Button x:Name="backButton"
                        Content=" Back"
                        Click="Back_Click"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        Foreground="#00E0FF"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,0,10"/>

                <!-- Header -->
                <TextBlock Text="Sign Up"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Role Indicator Badge -->
                <Border x:Name="roleBadge"
                        HorizontalAlignment="Center"
                        CornerRadius="15"
                        Padding="20,8"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="roleIcon"
                               Width="24" Height="24"
                               Margin="0,0,8,0"/>
                        <TextBlock x:Name="roleText"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Input Fields Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Username -->
                    <TextBlock Text="User name:"
                               Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="username_border"
                            Grid.Row="0" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <TextBox x:Name="username"
                                 Height="28"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="4">
                            <Binding Path="Username"
                                     ValidatesOnDataErrors="True"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:MinLenth/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Border>

                    <!-- Row 1: Password -->
                    <TextBlock Text="Password:"
                               Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="pass_border"
                            Grid.Row="1" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <PasswordBox x:Name="pass"
                                     Height="28"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="4"
                                     PasswordChanged="Pass_PasswordChanged"/>
                    </Border>

                    <!-- Row 2: Confirm Password -->
                    <TextBlock Text="Confirm Password:"
                               Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="confirmPass_border"
                            Grid.Row="2" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <PasswordBox x:Name="confirmPass"
                                     Height="28"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="4"/>
                    </Border>

                    <!-- Row 3: Age -->
                    <TextBlock Text="Age:"
                               Grid.Row="3" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="age_border"
                            Grid.Row="3" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <TextBox x:Name="age"
                                 Height="28"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="4">
                            <Binding Path="Age"
                                     ValidatesOnDataErrors="True"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:AgeRangeRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Border>

                    <!-- Row 4: Email -->
                    <TextBlock Text="Email:"
                               Grid.Row="4" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="email_border"
                            Grid.Row="4" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <TextBox x:Name="email"
                                 Height="28"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="4">
                            <Binding Path="Email"
                                     ValidatesOnDataErrors="True"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:EmailRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Border>

                    <!-- Row 5: Phone -->
                    <TextBlock Text="Phone:"
                               Grid.Row="5" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Margin="0,0,10,10"/>
                    <Border x:Name="phone_border"
                            Grid.Row="5" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Margin="0,0,0,10">
                        <TextBox x:Name="phone"
                                 Height="28"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="4">
                            <Binding Path="Phone"
                                     ValidatesOnDataErrors="True"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:PhoneRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Border>

                    <!-- Row 6: Teacher ID (for students only) -->
                    <TextBlock x:Name="idTecherText"
                               Text="Teacher id:"
                               Grid.Row="6" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Visibility="Collapsed"
                               Margin="0,0,10,10"/>
                    <Border x:Name="teacher_border"
                            Grid.Row="6" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Visibility="Collapsed"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="teacherId"
                                     Height="28"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="4">
                                <Binding Path="TeacherId"
                                         ValidatesOnDataErrors="True"
                                         UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:TeacherIdRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                            <Button x:Name="notSure"
                                    Content="Browse"
                                    Grid.Column="1"
                                    Click="notSure_Click"
                                    Background="#00E0FF"
                                    Foreground="Black"
                                    BorderBrush="Transparent"
                                    FontSize="11"
                                    Padding="8,2"
                                    Cursor="Hand"/>
                        </Grid>
                    </Border>

                    <!-- Row 7: Lesson Price (for teachers only) -->
                    <TextBlock x:Name="lessonPriceText"
                               Text="Lesson Price:"
                               Grid.Row="7" Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="LightGray"
                               Visibility="Collapsed"
                               Margin="0,0,10,10"/>
                    <Border x:Name="lessonPrice_border"
                            Grid.Row="7" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Visibility="Collapsed"
                            Margin="0,0,0,10">
                        <TextBox x:Name="lessonPrice"
                                 Height="28"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="4"
                                 >
                            <Binding Path="LessonPrice"
                                     ValidatesOnDataErrors="True"
                                     UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <local:LessonPriceRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox>
                    </Border>

                    <!-- Row 8: Payment Methods (for teachers only) -->
                    <TextBlock x:Name="paymentMethodsText"
                               Text="Payment Methods:"
                               Grid.Row="8" Grid.Column="0"
                               VerticalAlignment="Top"
                               Foreground="LightGray"
                               Visibility="Collapsed"
                               Margin="0,0,10,10"/>
                    <Border x:Name="paymentMethods_border"
                            Grid.Row="8" Grid.Column="1"
                            CornerRadius="3"
                            BorderBrush="#00C0CC"
                            BorderThickness="1"
                            Background="#223344"
                            Visibility="Collapsed"
                            Margin="0,0,0,10"
                            Padding="8">
                        <StackPanel>
                            <CheckBox x:Name="chkCash" Content="Cash" Foreground="White" IsChecked="True" Margin="0,2"/>
                            <CheckBox x:Name="chkCreditCard" Content="Credit Card" Foreground="White" IsChecked="True" Margin="0,2"/>
                            <CheckBox x:Name="chkBankTransfer" Content="Bank Transfer" Foreground="White" IsChecked="True" Margin="0,2"/>
                            <CheckBox x:Name="chkBit" Content="Bit" Foreground="White" IsChecked="False" Margin="0,2"/>
                            <CheckBox x:Name="chkPaybox" Content="Paybox" Foreground="White" IsChecked="False" Margin="0,2"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Sign Up Button -->
                <Button Content="Sign Up"
                        Click="signup_Click"
                        Width="140"
                        Height="40"
                        Background="#00E0FF"
                        Foreground="Black"
                        FontWeight="Bold"
                        BorderBrush="#00C0CC"
                        BorderThickness="1"
                        Margin="0,20,0,10"
                        Cursor="Hand"/>

                <!-- Log In Link -->
                <TextBlock HorizontalAlignment="Center"
                           FontSize="12"
                           Foreground="LightGray">
                    have an account?
                    <Hyperlink Click="LogIn_Click" Foreground="#00E0FF">Log In</Hyperlink>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Hidden Frame -->
        <Frame x:Name="page"
               Panel.ZIndex="2" Margin="-20,-22,-20,-18"/>
    </Grid>
</Page>
