<Page x:Class="driver_client.Teacher_Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Teacher_Schedule"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.05"
               Panel.ZIndex="0"/>

        <StackPanel Orientation="Vertical"
                    Panel.ZIndex="1">

            <!-- Header -->
            <TextBlock Text="Lesson Schedule"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TabControl Background="#14273D"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10"
                        Margin="0,0,0,20">

                <!-- Scheduled Lessons -->
                <TabItem Header="Scheduled Lessons">
                    <StackPanel>
                        <!-- Date Picker to choose a day -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Select Date:"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="White"
                                       Margin="0,0,10,0"/>
                            <DatePicker x:Name="LessonDatePicker"
                                        
                                        Width="200"
                                        Background="White"
                                        Foreground="Black"/>
                            <Button Content="Show Lessons"
                                    Margin="15,0,0,0"
                                    Padding="10,5"
                                    Background="#00E0FF"
                                    Foreground="Black"
                                    FontWeight="Bold"
                                    Click="ShowLessons_Click"
                                    />
                        </StackPanel>

                        <!-- Lessons list -->
                        <ListView x:Name="DayLessons"
                                  Background="#1B2D47"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Margin="0,10,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Student" Width="150" DisplayMemberBinding="{Binding StudentID}"/>
                                    <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}"/>
                                    <GridViewColumn Header="Duration" Width="100" DisplayMemberBinding="{Binding Duration}"/>
                                    <GridViewColumn Header="Status" Width="120" DisplayMemberBinding="{Binding Status}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </TabItem>
            
                <!-- Lesson History -->
                <TabItem Header="Lesson History">
                    <ListView x:Name="HistoryLessons"
                              Background="#1B2D47"
                              Foreground="White"
                              BorderThickness="0"
                              Margin="0,10,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Student" Width="150" DisplayMemberBinding="{Binding StudentName}"/>
                                <GridViewColumn Header="Date" Width="120" DisplayMemberBinding="{Binding Date}"/>
                                <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}"/>
                                <GridViewColumn Header="Paid" Width="80" DisplayMemberBinding="{Binding PaidStatus}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>

            <!-- Back Button -->
            <Button Content="Back"
                    HorizontalAlignment="Center"
                    Width="120"
                    Height="40"
                    Margin="0,10,0,0"
                    Background="#00E0FF"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="Back_Click"
                    />
        </StackPanel>
    </Grid>
</Page>
