<Page x:Class="driver_client.Teacher_Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="900"
      Background="#0E1A2B">

    <Grid Margin="20">

        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.05"
               Panel.ZIndex="0"/>

        <StackPanel Orientation="Vertical"
                    Panel.ZIndex="1">

            <TextBlock Text="Lesson Schedule"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TabControl Background="#14273D"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10"
                        Margin="0,0,0,20">


                <TabItem Header="Upcoming Lessons">
                    <ListView x:Name="UpcomingLessons"
                              Background="#1B2D47"
                              Foreground="White"
                              BorderThickness="0"
                              Margin="0,10,0,0"
                              SelectionMode="Single">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Student ID" Width="80" DisplayMemberBinding="{Binding StudentId}"/>
                                <GridViewColumn Header="Student Name" Width="150" DisplayMemberBinding="{Binding StudentName}"/>
                                
                                <GridViewColumn Header="Date" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}"/>

                                <GridViewColumn Header="Status" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StatusText}"
                                                       Foreground="{Binding StatusColor}"
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Paid" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding PaidButtonText}"
                                                    Background="#2980B9"
                                                    Foreground="White"
                                                    Padding="5,2"
                                                    CommandParameter="{Binding}"
                                                    Click="TogglePaid_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Cancel" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Cancel"
                                                    Background="#E74C3C"
                                                    Foreground="White"
                                                    Padding="5,2"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding CanCancel}"
                                                    Click="CancelLesson_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>



                <TabItem Header="Scheduled Lessons">
                    <StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Select Date:"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="White"
                                       Margin="0,0,10,0"/>

                            <DatePicker x:Name="LessonDatePicker"
                                        Width="200"
                                        Background="White"
                                        Foreground="Black"
                                        SelectedDateChanged="LessonDatePicker_SelectedDateChanged"/>
                        </StackPanel>

                        <ListView x:Name="DayLessons"
                                  Background="#1B2D47"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Margin="0,10,0,0"
                                  SelectionMode="Single">

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Student ID" Width="80" DisplayMemberBinding="{Binding StudentId}"/>
                                    <GridViewColumn Header="Student Name" Width="150" DisplayMemberBinding="{Binding StudentName}"/>

                                    <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}"/>

                                    <GridViewColumn Header="Status" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StatusText}"
                                                           Foreground="{Binding StatusColor}"
                                                           FontWeight="Bold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Paid" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding PaidButtonText}"
                                                        Background="#2980B9"
                                                        Foreground="White"
                                                        Padding="5,2"
                                                        CommandParameter="{Binding}"
                                                        Click="TogglePaid_Click"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView>
                            </ListView.View>

                        </ListView>

                    </StackPanel>
                </TabItem>



                <TabItem Header="Lesson History">
                    <ListView x:Name="HistoryLessons"
                              Background="#1B2D47"
                              Foreground="White"
                              BorderThickness="0"
                              Margin="0,10,0,0"
                              SelectionMode="Single">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Student ID" Width="80" DisplayMemberBinding="{Binding StudentId}"/>
                                <GridViewColumn Header="Student Name" Width="150" DisplayMemberBinding="{Binding StudentName}"/>
                                
                                <GridViewColumn Header="Date" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                <GridViewColumn Header="Time" Width="100" DisplayMemberBinding="{Binding Time}"/>

                                <GridViewColumn Header="Status" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StatusText}"
                                                       Foreground="{Binding StatusColor}"
                                                       FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Paid" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding PaidButtonText}"
                                                    Background="#2980B9"
                                                    Foreground="White"
                                                    Padding="5,2"
                                                    CommandParameter="{Binding}"
                                                    Click="TogglePaid_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>

            </TabControl>

            <Button Content="Back"
                    HorizontalAlignment="Center"
                    Width="120"
                    Height="40"
                    Margin="0,10,0,0"
                    Background="#00E0FF"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="Back_Click"/>

        </StackPanel>

        <Frame x:Name="page"
               Panel.ZIndex="100"
               Margin="-20,-20,-20,-20"/>

    </Grid>
</Page>