<Page x:Class="driver_client.ChooseTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Choose Your Teacher"
      Background="#0E1A2B">

    <Grid>
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <!-- Main content -->
        <Grid Panel.ZIndex="1">
            <!-- Header -->
            <StackPanel VerticalAlignment="Top" Margin="20,20,20,0">
                <!-- Back Button -->
                <Button Content="Back"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        Foreground="#00E0FF"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Margin="0,0,0,15"/>

                <!-- Title -->
                <TextBlock Text="Choose Your Teacher"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00E0FF"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Select a teacher to continue with registration"
                           FontSize="14"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Teachers list -->
            <ScrollViewer Margin="0,120,0,0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="TeacherListPanel" Margin="20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Navigation Frame -->
        <Frame x:Name="page"
               Panel.ZIndex="100"
               Margin="0"/>
    </Grid>
</Page>
