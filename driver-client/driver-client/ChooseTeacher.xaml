<Page x:Class="driver_client.ChooseTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:driver_client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseTeacher" Background="White">

    <Grid Background="White">
        <!-- Teachers list -->
        <ScrollViewer Margin="0,60,0,0">
            <ItemsControl x:Name="TeacherListPanel" Margin="20">
                
            </ItemsControl>
                
        </ScrollViewer>
        <Button Content="← Back"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="0,10,0,0"
        Width="80"
        Background="#00E0FF"
        Foreground="Black"
        FontWeight="Bold"
        BorderBrush="#00C0CC"
        Cursor="Hand"
        Click="BackButton_Click"/>
        <Frame x:Name="page" Grid.RowSpan="100" Grid.ColumnSpan="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Panel.ZIndex="100"/>
    </Grid>


</Page>
