<Page x:Class="driver_client.CreateTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTicket"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
            <Border CornerRadius="12"
                    Background="#1B2A40"
                    Padding="30"
                    MaxWidth="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="🎫 Submit Support Ticket"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#00E0FF"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Priority -->
                    <TextBlock Text="Priority"
                               Foreground="LightGray"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="PriorityCombo"
                              Background="#142435"
                              Foreground="White"
                              BorderBrush="#00E0FF"
                              BorderThickness="1"
                              Padding="8"
                              Margin="0,0,0,15"
                              SelectedIndex="1">
                        <ComboBoxItem Content="Low" Foreground="Green"/>
                        <ComboBoxItem Content="Medium" Foreground="Orange"/>
                        <ComboBoxItem Content="High" Foreground="OrangeRed"/>
                        <ComboBoxItem Content="Urgent" Foreground="Red"/>
                    </ComboBox>

                    <!-- Subject -->
                    <TextBlock Text="Subject"
                               Foreground="LightGray"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <Border BorderBrush="#00C0CC"
                            BorderThickness="1"
                            CornerRadius="3"
                            Background="#223344"
                            Margin="0,0,0,15">
                        <TextBox x:Name="SubjectBox"
                                 Height="30"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="6"
                                 MaxLength="200"/>
                    </Border>

                    <!-- Description -->
                    <TextBlock Text="Description"
                               Foreground="LightGray"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <Border BorderBrush="#00C0CC"
                            BorderThickness="1"
                            CornerRadius="3"
                            Background="#223344"
                            Margin="0,0,0,20">
                        <TextBox x:Name="DescriptionBox"
                                 Height="150"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="8"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="Submit Ticket"
                                Width="140"
                                Height="40"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="#00E0FF"
                                Foreground="Black"
                                BorderBrush="#00C0CC"
                                Cursor="Hand"
                                Click="Submit_Click"
                                Margin="0,0,10,0"/>

                        <Button Content="Cancel"
                                Width="100"
                                Height="40"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="Transparent"
                                Foreground="#00E0FF"
                                BorderBrush="#00E0FF"
                                Cursor="Hand"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <Frame x:Name="page" Panel.ZIndex="100" Margin="-20,-20,-20,-20"/>
    </Grid>
</Page>