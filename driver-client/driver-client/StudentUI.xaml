<Page x:Class="driver_client.StudentUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentUI"
      Background="#0E1A2B">

    <Grid x:Name="MainGrid" Margin="20">
        <!-- Background image -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0" />

        <!-- Waiting message -->
        <StackPanel x:Name="WaitingPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1">
            <TextBlock Text="Waiting for Teacher Approval..."
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <ProgressBar Width="300"
                         Height="20"
                         IsIndeterminate="True"
                         Margin="20"/>
        </StackPanel>

        <!-- Student options -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
        <StackPanel x:Name="StudentPanel"
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300"
                    Panel.ZIndex="1">
            <TextBlock Text="Welcome!"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="Schedule a Lesson"
                    Click="ScheduleLesson_Click"
                    Background="#00E0FF"
                    Foreground ="Black"
                    FontWeight ="Bold"
                    FontSize ="16"
                    Height ="45"
                    Cursor="Hand"
                    BorderBrush ="#00C0CC"
                    Margin="0,10"/>

            <Button Content="Write a Review"
                    Click="WriteReview_Click"
                    Background="#00E0FF"
                    Foreground ="Black"
                    FontWeight ="Bold"
                    FontSize ="16"
                    Height ="45"
                    Cursor="Hand"
                    BorderBrush ="#00C0CC"
                    Margin="0,10"
                    x:Name="writeReview"/>
            
            <Button Content="View All Reviews"
                    Click="Review_Click"
                    Background="#00E0FF"
                    Foreground ="Black"
                    FontWeight ="Bold"
                    FontSize ="16"
                    Height ="45"
                    Cursor="Hand"
                    BorderBrush ="#00C0CC"
                    Margin="0,10"/>

            <Button Content="View My Lessons"
                    Click="ViewLessons_Click"
                    Background="#00E0FF"
                    Foreground ="Black"
                    FontWeight ="Bold"
                    FontSize ="16"
                    Height ="45"
                    Cursor="Hand"
                    BorderBrush ="#00C0CC"
                    Margin="0,10"/>
            <Button Content="Chat"
                Margin="0,10"
                Width="280" Height="50"
                FontSize="18"
                FontWeight="SemiBold"
                Background="#00E0FF"
                Foreground="Black"
                BorderBrush="#00C0CC"
                Cursor="Hand"
                Click="Chat_Click"/>
            <Button Content="Exit"
                    Click="Back_Click"
                    Background="#00E0FF"
                    Foreground ="Black"
                    FontWeight ="Bold"
                    FontSize ="16"
                    Height ="45"
                    Cursor="Hand"
                    BorderBrush ="#00C0CC"
                    Margin="20,30,20,0"/>
            
        </StackPanel>
        </ScrollViewer>
        <Frame x:Name="page" Margin="-19,-21,-21,-19" Panel.ZIndex="100"/>
    </Grid>
    
</Page>
