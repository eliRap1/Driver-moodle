<Page x:Class="driver_client.MyTickets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyTickets"
      Background="#0E1A2B">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Background -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Grid.RowSpan="3"
               Panel.ZIndex="0"/>

        <!-- Header -->
        <StackPanel Grid.Row="0" Panel.ZIndex="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="My Support Tickets"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       VerticalAlignment="Center"/>

            <Button Content="+ New Ticket"
                    Width="140"
                    Height="40"
                    Background="#00E0FF"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderBrush="#00C0CC"
                    Cursor="Hand"
                    Click="NewTicket_Click"/>
        </StackPanel>

        <!-- Tickets List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Panel.ZIndex="1">
            <StackPanel x:Name="TicketsPanel"/>
        </ScrollViewer>

        <!-- Back Button -->
        <Button Grid.Row="2"
                Content="← Back"
                Width="100"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Background="#00E0FF"
                Foreground="Black"
                FontWeight="Bold"
                BorderBrush="#00C0CC"
                Cursor="Hand"
                Click="Back_Click"
                Panel.ZIndex="1"/>

        <Frame x:Name="page" Grid.RowSpan="3" Margin="-20,-20,-20,-20" Panel.ZIndex="100"/>
    </Grid>
</Page>