<Page x:Class="driver_client.AdminUserManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="AdminUserManagement"
      Background="#0E1A2B">

    <Grid Margin="20">
        <!-- Background -->
        <Image Source="/picture/background.png"
               Stretch="UniformToFill"
               Opacity="0.06"
               Panel.ZIndex="0"/>

        <Grid Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="👥 User Management"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00E0FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Tab Selection -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button x:Name="StudentsTabBtn" Content="Students" 
                        Width="120" Height="35" Margin="5"
                        Background="#00E0FF" Foreground="Black" FontWeight="Bold"
                        Click="StudentsTab_Click"/>
                <Button x:Name="TeachersTabBtn" Content="Teachers" 
                        Width="120" Height="35" Margin="5"
                        Background="#1B2D47" Foreground="White" FontWeight="Bold"
                        Click="TeachersTab_Click"/>
            </StackPanel>

            <!-- Users List -->
            <Border Grid.Row="2" Background="#1B2D47" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- User List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="UsersPanel"/>
                    </ScrollViewer>

                    <!-- User Details Panel -->
                    <Border Grid.Column="1" Background="#142435" CornerRadius="8" Padding="15" Margin="15,0,0,0">
                        <StackPanel x:Name="UserDetailsPanel">
                            <TextBlock Text="Select a user to view details"
                                       Foreground="LightGray"
                                       FontStyle="Italic"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="← Back to Dashboard"
                        Width="160" Height="40"
                        Background="#00E0FF" Foreground="Black" FontWeight="Bold"
                        Click="Back_Click"/>
            </StackPanel>
        </Grid>

        <Frame x:Name="page" Panel.ZIndex="100" Margin="-20,-20,-20,-20"/>
    </Grid>
</Page>
